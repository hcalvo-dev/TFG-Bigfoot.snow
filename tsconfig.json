{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "server/**/*.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}